{
  "hosting": {
    "public": "dist/wwwroot",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "headers": [{
      "source" : "**",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "no-cache, no-store, must-revalidate"
      },
      {
        "key" : "Pragma",
        "value" : "no-cache"
      },
      {
        "key" : "Expires",
        "value" : "0"
      }]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}